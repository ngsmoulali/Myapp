<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rishi.myapp.MusicRawActivity">

    <ImageButton
        android:onClick="click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibPlay"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="65dp"
        android:src="@drawable/play_default" />

    <ImageButton
        android:onClick="click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibPause"
        android:src="@drawable/pause_defualt"
        android:layout_alignTop="@+id/ibPlay"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/ibPlay" />

    <Button
        android:onClick="click"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/btnStop"
        android:layout_below="@+id/ibPlay"
        android:layout_marginTop="68dp"
        android:layout_alignRight="@+id/ibStop"
        android:layout_alignEnd="@+id/ibStop" />
</RelativeLayout>
