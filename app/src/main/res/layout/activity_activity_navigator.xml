<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rishi.myapp.ActivityNavigator">

    <Button
        android:onClick="navigation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Greet User"
        android:id="@+id/btnGreet"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:onClick="navigation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Benchmark"
        android:id="@+id/btnBenchmark"
        android:layout_below="@+id/btnGreet"
        android:layout_alignRight="@+id/btnGreet"
        android:layout_alignEnd="@+id/btnGreet" />

    <Button
        android:onClick="navigation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Context Menu"
        android:id="@+id/btnContext"
        android:layout_below="@+id/btnBenchmark"
        android:layout_centerHorizontal="true" />

    <Button
        android:onClick="navigation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Web View"
        android:id="@+id/btnWeb"
        android:layout_below="@+id/btnContext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:onClick="navigation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Google News"
        android:id="@+id/btnGoogle"
        android:layout_above="@+id/btnFelight"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:onClick="navigation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Felight News"
        android:id="@+id/btnFelight"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="77dp" />
</RelativeLayout>
